<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#f3f3f3"
                ></solid>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="2dp"
                android:color="#808080"
                />
        </shape>
    </item>
</selector>