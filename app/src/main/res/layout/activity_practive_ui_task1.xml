<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".UiTask1Practice.PracticeUiTask1">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/yambre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/user_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"/>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnLogin"
                        android:onClick="onLoginClicked"
                        style="@style/iphone_style.iphone_style_button"
                        android:text="Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnSignup"
                        android:onClick="onSignUpClicked"
                        style="@style/iphone_style.iphone_style_button"
                        android:text="Sign Up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rrSignInForm"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llone"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lltwo"
                    android:layout_below="@+id/llone"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="10dp"
                    style="@style/iphone_style.iphone_style_button"
                    android:id="@+id/btnSignIn"
                    android:text="Sigh in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lltwo"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Forgot Password ?"
                    android:layout_below="@+id/btnSignIn"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <!-- Sign up View-->
            <RelativeLayout
                android:id="@+id/rrSignUpForm"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llthree"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llfour"
                    android:layout_below="@+id/llthree"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Real Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llfive"
                    android:layout_below="@+id/llfour"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llsix"
                    android:layout_below="@+id/llfive"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Reenter Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llseven"
                    android:layout_below="@+id/llsix"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lleight"
                    android:layout_below="@+id/llseven"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llnine"
                    android:layout_below="@+id/lleight"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/green"
                        android:text="Phone Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        style="@style/iphone_style"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="10dp"
                    style="@style/iphone_style.iphone_style_button"
                    android:id="@+id/btn"
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llnine"
                    android:layout_centerHorizontal="true"/>
                <!--<TextView-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:text="Forgot Password ?"-->
                    <!--android:layout_below="@+id/btnSignIn"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:textColor="@color/green"-->
                    <!--android:layout_height="wrap_content"/>-->
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
