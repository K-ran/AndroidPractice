<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ankita.myapplication.drawablesPractice.PracticeDrawables">
<Button
    android:background="@drawable/button_transition"
    android:id="@+id/btnDrawableTran"
    android:text="Transition"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

<EditText
    android:padding="5dp"
    android:hint="hi"
    android:background="@drawable/text_box_selector"
    android:id="@+id/etDrawable1"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/btnDrawableTran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<EditText
    android:padding="5dp"
    android:background="@drawable/text_box_selector"
    android:id="@+id/etDrawable2"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/etDrawable1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<View
    android:id="@+id/line"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/etDrawable2"
    android:background="@color/green"
    android:layout_width="match_parent"
    android:layout_height="2dp"></View>

<Button
    android:layout_marginTop="10dp"
    android:onClick="back"
    android:text="back"
    android:id="@+id/btnBAck"
    android:background="@drawable/ring"
    android:layout_below="@id/line"
    android:layout_centerHorizontal="true"
    android:layout_width="120dp"
    android:layout_height="120dp"/>
</RelativeLayout>
