<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ankita.myapplication.sqlLiteDatabasePractice.PracticeSqllite">
    <LinearLayout
        android:id="@+id/llsql1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etName"
            android:layout_weight="3"
            android:hint="Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etMarks"
            android:layout_weight="1"
            android:hint="Marks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="save"
            style="@style/iphone_style.iphone_style_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="insertData"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        style="@style/iphone_style.iphone_style_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Records"
        android:id="@+id/button"
        android:onClick="displayData"
        android:layout_below="@id/llsql1"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ListView
            style="@style/iphone_style"
            android:id="@+id/lvSqliteValeList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</RelativeLayout>
